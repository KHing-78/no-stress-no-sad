<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgn">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stressQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="20dp"
            android:textColor="#ffff"
            android:padding="20dp"
            />

        <RadioGroup
            android:id="@+id/stressAnswerGroup"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:background="@drawable/st20_radiobutton"

            >

            <RadioButton
                android:id="@+id/stressValue0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/radio_score_0" />

            <RadioButton
                android:id="@+id/stressValue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="320dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/radio_score_1" />

            <RadioButton
                android:id="@+id/stressValue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="320dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/radio_score_2" />

            <RadioButton
                android:id="@+id/stressValue3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="320dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/radio_score_3" />

            <RadioButton
                android:id="@+id/stressValue4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="320dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/radio_score_4" />

            <RadioButton
                android:id="@+id/stressValue5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="320dp"
                android:textColor="#ffff"
                android:buttonTint="#ffff"
                android:text="@string/radio_score_5" />

        </RadioGroup>

        <Button
            android:id="@+id/btnNextQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/btn_next" />

    </RelativeLayout>



</LinearLayout>