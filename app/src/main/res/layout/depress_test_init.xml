<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgn">
    <Button
        android:id="@+id/exit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/exit"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:text="โปรดกรอกข้อมูลของคุณ"
        android:textSize="30dp">

    </TextView>

    <RadioGroup
        android:id="@+id/radioGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_gender_male"
            android:textColor="#ffff"
            android:buttonTint="#ffff"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="500dp" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_gender_female"
            android:textColor="#ffff"
            android:buttonTint="#ffff"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="500dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:textSize="36dp"
        android:textColor="#ffff"
        android:text="@string/faculty_text"></TextView>

    <Spinner
        android:id="@+id/dropdown_faculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:textColor="#ffff"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="1000dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textColor="#ffff"
        android:layout_marginHorizontal="50dp"
        android:text="@string/age_text"></TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_age"
        android:layout_marginHorizontal="50dp"
        android:textColorHint="#ffff"
        android:hint="อายุของผู้ทำแบบประเมิน Ex. 20"
        android:inputType="numberDecimal">
    </EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startTest"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        android:text="@string/btn_start">

    </Button>
</LinearLayout>